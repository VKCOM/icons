{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "lib": ["es6", "dom"],
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
